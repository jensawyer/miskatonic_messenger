{
  "name": "eldritch-oracle-web",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Eldritch Oracle web frontend (React + Vite)",
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "dev": "vite --strictPort --port 5173",
    "build": "vite build",
